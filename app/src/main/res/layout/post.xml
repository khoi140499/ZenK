<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/post_imgprofile"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:gravity="bottom"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:id="@+id/post_fullname"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:id="@+id/post_date"
                    android:textSize="12dp"
                    />
            </LinearLayout>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_menu"
                android:src="@drawable/ic_menu_vertical"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:id="@+id/post_status"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/black"
        />
    <com.smarteist.autoimageslider.SliderView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:id="@+id/post_img"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:stretchColumns="*"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text=""
                        android:id="@+id/post_like"
                        />
                    <TextView
                        android:layout_gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text=""
                        android:id="@+id/post_cmt"
                        />
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:stretchColumns="*"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    >
                   <Button
                       android:id="@+id/post_btnlike"
                       android:layout_width="match_parent"
                       android:layout_height="30dp"
                       android:background="@null"
                       android:text="Lượt thích"
                       android:textSize="12dp"
                       android:drawablePadding="-17dp"
                       android:paddingStart="15dp"
                       android:drawableStart="@drawable/ic_like"
                       />
                    <Button
                        android:id="@+id/post_btncmt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:text="Bình luận"
                        android:textSize="12dp"
                        android:drawablePadding="-17dp"
                        android:paddingStart="15dp"
                        android:drawableStart="@drawable/ic_cmt"
                        />
                    <Button
                        android:id="@+id/post_btnshare"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:text="Chia sẻ"
                        android:textSize="12dp"
                        android:drawablePadding="-17dp"
                        android:paddingStart="15dp"
                        android:drawableStart="@drawable/ic_share"
                        />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>